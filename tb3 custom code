<script type="text/javascript">
function customLayer() {
      var url = "path to html file here"; // put here the url to the page which simply returns the content for the layer
      if(!tbLayer.isInitialized()) {
            tbLayer.init();
}
      tbLayer.width = 500;
      tbLayer.height = 400;
      tbLayer.bgTransparent = false;
      tbLayer.topMargin = 80;
      tbLayer.draggable = false;
      tbLayer.open(url, true); // 2nd parameter for “show close button” (yes/no)
}
</script>


<a href="Javascript:customLayer()">click here</a>


